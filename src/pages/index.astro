<script define:vars={{ apps }}>
  const appsData = apps || [];
  let currentAppIndex = 0;

  // Utility to get app index safely by id (returns -1 if not found)
  function indexForAppId(appId) {
    return appsData.findIndex((a) => a.id === appId);
  }

  function updateAppContentByIndex(index) {
    if (index < 0 || index >= appsData.length) return;
    const app = appsData[index];

    // Desktop elements
    const titleEl = document.getElementById("app-title");
    const descEl = document.getElementById("app-description");
    const appStoreLink = document.getElementById("appstore-link");
    const playStoreLink = document.getElementById("playstore-link");
    const iphoneLabel = document.getElementById("iphone-label");
    const androidLabel = document.getElementById("android-label");

    if (titleEl) titleEl.textContent = app.name;
    if (descEl) descEl.textContent = app.description;
    if (appStoreLink) appStoreLink.href = app.appStoreUrl;
    if (playStoreLink) playStoreLink.href = app.playStoreUrl;
    if (iphoneLabel) iphoneLabel.textContent = app.name;
    if (androidLabel) androidLabel.textContent = app.name;

    // Mobile elements
    const titleMobile = document.getElementById("app-title-mobile");
    const descMobile = document.getElementById("app-description-mobile");
    const appStoreLinkMobile = document.getElementById("appstore-link-mobile");
    const playStoreLinkMobile = document.getElementById("playstore-link-mobile");

    if (titleMobile) titleMobile.textContent = app.name;
    if (descMobile) descMobile.textContent = app.description;
    if (appStoreLinkMobile) appStoreLinkMobile.href = app.appStoreUrl;
    if (playStoreLinkMobile) playStoreLinkMobile.href = app.playStoreUrl;

    // Desktop indicators
    const desktopIndicators = document.querySelectorAll("[data-indicator-desktop]");
    desktopIndicators.forEach((indicator, idx) => {
      if (idx === index) {
        indicator.classList.remove("bg-gray-300", "dark:bg-gray-600");
        indicator.classList.add("bg-gray-900", "dark:bg-white");
      } else {
        indicator.classList.remove("bg-gray-900", "dark:bg-white");
        indicator.classList.add("bg-gray-300", "dark:bg-gray-600");
      }
    });
    
    desktopIndicators.forEach((indicator, idx) => {
      if (indicator._tkHandler) return;
      const handler = () => {
        currentAppIndex = idx;
        scrollPhonesToIndex(currentAppIndex);
        updateAppContentByIndex(currentAppIndex);
      };
      indicator.addEventListener("click", handler);
      indicator._tkHandler = handler;
    });

    // Mobile indicators
    const indicators = document.querySelectorAll("[data-indicator]");
    if (!indicators || indicators.length === 0) return;

    const iphoneContainer = document.getElementById("phone-scroll-container");
    if (iphoneContainer && indicators.length !== iphoneContainer.children.length) {
      console.warn("tinykite: indicator/slide count mismatch", indicators.length, iphoneContainer.children.length);
    }

    indicators.forEach((indicator, idx) => {
      if (idx === index) {
        indicator.classList.remove("bg-gray-300", "dark:bg-gray-600");
        indicator.classList.add("bg-gray-900", "dark:bg-white");
      } else {
        indicator.classList.remove("bg-gray-900", "dark:bg-white");
        indicator.classList.add("bg-gray-300", "dark:bg-gray-600");
      }
    });
  }

  // Scroll both phone containers to a given index (smooth)
  function scrollPhonesToIndex(index) {
    if (typeof index !== "number" || index < 0) return;

    const iphoneContainer = document.getElementById("phone-scroll-container");
    const androidContainer = document.getElementById("phone-scroll-container-android");

    const iphoneChild = iphoneContainer?.children?.[index];
    const androidChild = androidContainer?.children?.[index];

    if (!iphoneChild && !androidChild) {
      console.warn("tinykite: no slide found at index", index, {
        iphoneChildren: iphoneContainer?.children?.length,
        androidChildren: androidContainer?.children?.length
      });
      return;
    }

    if (iphoneContainer && iphoneChild) {
      iphoneContainer.scrollTo({ top: iphoneChild.offsetTop, behavior: "smooth" });
    } else if (iphoneChild) {
      iphoneChild.scrollIntoView({ behavior: "smooth", block: "start" });
    }

    if (androidContainer && androidChild) {
      androidContainer.scrollTo({ top: androidChild.offsetTop, behavior: "smooth" });
    } else if (androidChild) {
      androidChild.scrollIntoView({ behavior: "smooth", block: "start" });
    }
  }

  // Card transition animation
  function animateCardTransition() {
    const cardContainer = document.getElementById('card-content-container');
    
    cardContainer.style.transform = 'scale(0.95)';
    cardContainer.style.filter = 'blur(2px)';
    cardContainer.style.opacity = '0.7';
    
    setTimeout(() => {
      updateAppContentByIndex(currentAppIndex);
      cardContainer.style.transform = 'scale(1)';
      cardContainer.style.filter = 'blur(0)';
      cardContainer.style.opacity = '1';
    }, 250);
  }

  // Wheel + touch handling (debounced-ish)
  let scrollTimeout;
  let isScrolling = false;
  function handleWheel(e) {
    if (!appsData.length) return;
    e.preventDefault();

    if (scrollTimeout) {
      clearTimeout(scrollTimeout);
    }

    if (!isScrolling) {
      isScrolling = true;
      
      if (e.deltaY > 0 && currentAppIndex < appsData.length - 1) {
        currentAppIndex++;
      } else if (e.deltaY < 0 && currentAppIndex > 0) {
        currentAppIndex--;
      } else {
        isScrolling = false;
        return;
      }

      scrollPhonesToIndex(currentAppIndex);
      animateCardTransition();
    }

    scrollTimeout = setTimeout(() => {
      isScrolling = false;
    }, 150);
  }

  // --- SCROLL INDICATOR LOGIC ---
  // REMOVED scrollIndicatorVisible variable since it's always visible now

  function updateScrollIndicator() {
    const container = document.getElementById('scroll-indicator-container');
    const dotsContainer = document.getElementById('scroll-indicator-dots');

    if (!container || !dotsContainer || appsData.length === 0) return;

    // Update dot states
    const dots = dotsContainer.querySelectorAll('.scroll-indicator-dot');
    dots.forEach((dot, index) => {
      if (index === currentAppIndex) {
        dot.classList.remove('bg-gray-400', 'dark:bg-gray-600');
        dot.classList.add('bg-blue-500', 'h-8', 'shadow-[0_0_12px_rgba(59,130,246,0.5)]');
      } else {
        dot.classList.remove('bg-blue-500', 'h-8', 'shadow-[0_0_12px_rgba(59,130,246,0.5)]');
        dot.classList.add('bg-gray-400', 'dark:bg-gray-600', 'hover:bg-gray-600', 'dark:hover:bg-gray-400');
      }
    });

    // Always visible - no visibility logic needed
    container.classList.remove('opacity-0', 'translate-x-8');
    container.classList.add('opacity-100', 'translate-x-0');
  }

  function initScrollIndicator() {
    const dotsContainer = document.getElementById('scroll-indicator-dots');
    if (!dotsContainer || appsData.length === 0) return;

    // Clear existing dots
    dotsContainer.innerHTML = '';

    // Create new dots
    appsData.forEach((_, index) => {
      const dot = document.createElement('button');
      dot.className = `scroll-indicator-dot w-2 h-2 rounded-full transition-all duration-300 ${index === currentAppIndex ? 'bg-blue-500 h-8 shadow-[0_0_12px_rgba(59,130,246,0.5)]' : 'bg-gray-400 dark:bg-gray-600 hover:bg-gray-600 dark:hover:bg-gray-400'}`;
      dot.setAttribute('aria-label', `Go to section ${index + 1}`);
      
      dot.addEventListener('click', () => {
        currentAppIndex = index;
        scrollPhonesToIndex(currentAppIndex);
        animateCardTransition();
        updateScrollIndicator();
      });
      
      dotsContainer.appendChild(dot);
    });

    // Always visible - no timeout needed
    updateScrollIndicator();
  }

  // NEW: Function to detect current app index based on scroll position (for snap containers)
  function getCurrentAppIndexFromScroll(container) {
    if (!container) return currentAppIndex;
    
    const children = container.children;
    const scrollTop = container.scrollTop;
    const containerHeight = container.clientHeight;
    
    // Calculate which child is currently visible based on scroll position
    for (let i = 0; i < children.length; i++) {
      const child = children[i];
      const childTop = child.offsetTop;
      const childHeight = child.clientHeight;
      
      // Check if this child is at the top of the container (snap position)
      if (Math.abs(scrollTop - childTop) < 10) { // Allow small tolerance for smooth scrolling
        return Math.min(i, appsData.length - 1);
      }
    }
    
    // Fallback: calculate index based on scroll position divided by container height
    const calculatedIndex = Math.floor(scrollTop / containerHeight);
    return Math.max(0, Math.min(calculatedIndex, appsData.length - 1));
  }

  // NEW: Scroll event handlers for phone containers
  function handleIphoneScroll() {
    const container = document.getElementById("phone-scroll-container");
    if (!container) return;
    
    const newAppIndex = getCurrentAppIndexFromScroll(container);
    if (newAppIndex !== currentAppIndex) {
      currentAppIndex = newAppIndex;
      updateAppContentByIndex(currentAppIndex);
      updateScrollIndicator();
    }
  }

  function handleAndroidScroll() {
    const container = document.getElementById("phone-scroll-container-android");
    if (!container) return;
    
    const newAppIndex = getCurrentAppIndexFromScroll(container);
    if (newAppIndex !== currentAppIndex) {
      currentAppIndex = newAppIndex;
      updateAppContentByIndex(currentAppIndex);
      updateScrollIndicator();
    }
  }

  if (typeof window !== "undefined") {
    // Initialize UI
    updateAppContentByIndex(currentAppIndex);
    initScrollIndicator(); // Initialize scroll indicator

    // Event listeners
    window.addEventListener("wheel", handleWheel, { passive: false });

    let touchStartY = 0;
    let touchIsScrolling = false;
    window.addEventListener("touchstart", (e) => {
      touchStartY = e.touches?.[0]?.clientY || 0;
    });

    window.addEventListener("touchmove", (e) => {
      if (!appsData.length) return;
      const touchY = e.touches?.[0]?.clientY || 0;
      const diff = touchStartY - touchY;

      if (Math.abs(diff) > 50 && !touchIsScrolling) {
        e.preventDefault();
        touchIsScrolling = true;

        if (diff > 0 && currentAppIndex < appsData.length - 1) {
          currentAppIndex++;
          scrollPhonesToIndex(currentAppIndex);
          animateCardTransition();
        } else if (diff < 0 && currentAppIndex > 0) {
          currentAppIndex--;
          scrollPhonesToIndex(currentAppIndex);
          animateCardTransition();
        }
        touchStartY = touchY;

        setTimeout(() => {
          touchIsScrolling = false;
        }, 150);
      }
    }, { passive: false });

    // Mobile indicators
    const indicators = document.querySelectorAll("[data-indicator]");
    indicators.forEach((indicator, idx) => {
      if (indicator._tkHandler) return;
      const handler = () => {
        currentAppIndex = idx;
        scrollPhonesToIndex(currentAppIndex);
        animateCardTransition();
        updateScrollIndicator(); // Update scroll indicator state
      };
      indicator.addEventListener("click", handler);
      indicator._tkHandler = handler;
    });

    // NEW: Add scroll event listeners to phone containers
    const iphoneContainer = document.getElementById("phone-scroll-container");
    const androidContainer = document.getElementById("phone-scroll-container-android");
    
    if (iphoneContainer) {
      iphoneContainer.addEventListener("scroll", handleIphoneScroll);
    }
    
    if (androidContainer) {
      androidContainer.addEventListener("scroll", handleAndroidScroll);
    }
  }

  // Typewriter function
  function startTypewriter(textEl, cursorEl) {
    const phrases = ["We innovate.", "We build.", "We connect."];

    if (!textEl || !cursorEl) return;

    let phraseIndex = 0;
    let charIndex = 0;
    let deleting = false;

    const typeSpeed = 100;
    const eraseSpeed = 60;
    const delayAfterFinish = 1000;

    function loop() {
      const current = phrases[phraseIndex];

      if (!deleting) {
        textEl.textContent = current.substring(0, charIndex++);
        if (charIndex > current.length) {
          deleting = true;
          return setTimeout(loop, delayAfterFinish);
        }
      } else {
        textEl.textContent = current.substring(0, charIndex--);
        if (charIndex < 0) {
          deleting = false;
          phraseIndex = (phraseIndex + 1) % phrases.length;
        }
      }

      setTimeout(loop, deleting ? eraseSpeed : typeSpeed);
    }

    loop();
  }

  startTypewriter(
    document.getElementById("typed-text"),
    document.getElementById("cursor")
  );

  startTypewriter(
    document.getElementById("typed-text-mobile"),
    document.getElementById("cursor-mobile")
  );

  // Card transition animation (for both desktop and mobile)
function animateCardTransition() {
  // Desktop card animation
  const cardContainer = document.getElementById('card-content-container');
  if (cardContainer) {
    cardContainer.style.transform = 'scale(0.95)';
    cardContainer.style.filter = 'blur(2px)';
    cardContainer.style.opacity = '0.7';
    
    setTimeout(() => {
      updateAppContentByIndex(currentAppIndex);
