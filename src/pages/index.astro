---
import Layout from '../layouts/Layout.astro';
---

<Layout title="TinyKite - We innovate. We build. We connect.">
  <!-- Hero Section - Desktop & Mobile -->
  <section class="relative bg-gradient-to-br from-gray-50 to-white dark:from-dark-lighter dark:to-dark py-12 md:py-20 lg:py-24 overflow-hidden">
    <div class="container mx-auto px-4">
      <!-- Desktop Layout -->
      <div class="hidden lg:grid lg:grid-cols-3 lg:gap-8 items-center max-w-7xl mx-auto">
        <!-- Left Phone - iPhone -->
        <div class="flex flex-col items-center">
          <div class="relative w-64">
            <img src="/phone-mockup-iphone.svg" alt="Community Hub on iPhone" class="w-full drop-shadow-2xl" />
          </div>
          <p class="mt-4 text-sm font-medium text-gray-600 dark:text-gray-400">Community Hub</p>
        </div>

        <!-- Center Content -->
        <div class="text-center space-y-8">
          <div>
            <h1 class="text-4xl xl:text-5xl font-bold text-gray-900 dark:text-white mb-4 leading-tight">
              We innovate. We build.<br/>We connect.
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-md mx-auto">
              TinyKite is a product studio crafting a seamless ecosystem of apps that empower and inspire.
            </p>
          </div>

          <!-- App Showcase -->
          <div class="bg-white dark:bg-dark-light rounded-2xl p-6 shadow-lg">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">Community Hub</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-6">
              Connect with like-minded individuals, join groups, and share passions in a vibrant, safe space.
            </p>
            
            <!-- App Store Badges -->
            <div class="flex justify-center gap-4 mb-6">
              <a href="#" class="transform hover:scale-105 transition-transform">
                <img src="/app-store-badge.svg" alt="Download on App Store" class="h-12" />
              </a>
              <a href="#" class="transform hover:scale-105 transition-transform">
                <img src="/google-play-badge.svg" alt="Get it on Google Play" class="h-12" />
              </a>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/apps" class="px-8 py-3 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg">
                Explore Our Apps
              </a>
              <a href="/about" class="px-8 py-3 border-2 border-primary text-primary font-semibold rounded-lg hover:bg-primary hover:text-white transition-colors">
                Request an App â†’
              </a>
            </div>
          </div>

          <p class="text-sm text-gray-500 dark:text-gray-500 flex items-center justify-center gap-2">
            Scroll to see our portfolio 
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </p>
        </div>

        <!-- Right Phone - Android -->
        <div class="flex flex-col items-center">
          <div class="relative w-64">
            <img src="/phone-mockup-android.svg" alt="Community Hub on Android" class="w-full drop-shadow-2xl" />
          </div>
          <p class="mt-4 text-sm font-medium text-gray-600 dark:text-gray-400">Community Hub</p>
        </div>
      </div>

      <!-- Mobile Layout -->
      <div class="lg:hidden max-w-md mx-auto">
        <div class="text-center space-y-6">
          <div>
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4 leading-tight">
              We innovate.<br/>We build.<br/>We connect.
            </h1>
            <p class="text-base text-gray-600 dark:text-gray-400">
              TinyKite is a product studio crafting a seamless ecosystem of apps that empower and inspire.
            </p>
          </div>

          <!-- App Showcase -->
          <div class="bg-white dark:bg-dark-light rounded-2xl p-6 shadow-lg relative">
            <!-- Scroll Indicators -->
            <div class="absolute right-4 top-1/2 -translate-y-1/2 flex flex-col gap-2 z-10">
              <div class="w-2 h-2 rounded-full bg-gray-900 dark:bg-white"></div>
              <div class="w-2 h-2 rounded-full bg-gray-300 dark:bg-gray-600"></div>
              <div class="w-2 h-2 rounded-full bg-gray-300 dark:bg-gray-600"></div>
            </div>

            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Community Hub</h2>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              Connect with like-minded individuals, join groups, and share passions in a vibrant, safe space.
            </p>
            
            <!-- App Store Badges -->
            <div class="flex justify-center gap-3 mb-6">
              <a href="#" class="transform hover:scale-105 transition-transform">
                <img src="/app-store-badge.svg" alt="Download on App Store" class="h-10" />
              </a>
              <a href="#" class="transform hover:scale-105 transition-transform">
                <img src="/google-play-badge.svg" alt="Get it on Google Play" class="h-10" />
              </a>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col gap-3">
              <a href="/apps" class="px-6 py-3 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg text-center">
                Explore Our Apps
              </a>
              <a href="/about" class="px-6 py-3 border-2 border-primary text-primary font-semibold rounded-lg hover:bg-primary hover:text-white transition-colors text-center">
                Learn Our Story â†’
              </a>
            </div>
          </div>

          <p class="text-sm text-gray-500 dark:text-gray-500 flex items-center justify-center gap-2">
            Scroll to see our portfolio 
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Section (placeholder for scrolled content) -->
  <section class="py-20 bg-white dark:bg-dark">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 dark:text-white mb-12">
        Our Portfolio
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Portfolio items would go here -->
        <div class="bg-gray-50 dark:bg-dark-lighter rounded-xl p-8 text-center border border-gray-200 dark:border-dark-light">
          <div class="text-4xl mb-4">ðŸš€</div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Coming Soon</h3>
          <p class="text-gray-600 dark:text-gray-400">More apps on the way</p>
        </div>
        <div class="bg-gray-50 dark:bg-dark-lighter rounded-xl p-8 text-center border border-gray-200 dark:border-dark-light">
          <div class="text-4xl mb-4">ðŸ’¡</div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Innovation</h3>
          <p class="text-gray-600 dark:text-gray-400">Building the future</p>
        </div>
        <div class="bg-gray-50 dark:bg-dark-lighter rounded-xl p-8 text-center border border-gray-200 dark:border-dark-light">
          <div class="text-4xl mb-4">ðŸŒŸ</div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Excellence</h3>
          <p class="text-gray-600 dark:text-gray-400">Quality first</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
